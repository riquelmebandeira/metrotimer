{
  "name": "metrotimer",
  "version": "1.0.0",
  "description": "",
  "main": "scripts.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss css/styles.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "sass sass/main.scss css/styles.comp.css --no-source-map",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/styles.comp.css -o css/styles.prefix.css",
    "compress:css": "sass css/styles.prefix.css css/styles.css --style=compressed --no-source-map",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "sass": "^1.57.1"
  }
}
